<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />

    <title>Index</title>
  </head>
  <body>
    <%- include('../partials/header.ejs', { bigLogo: false, smallLogo: true,
    searchBox: true, cartProfile: true }) %>
    <main id="mainIndex">
      <%- include('../partials/navbar.ejs')%>
      <section class="ProductHero">
        <div></div>
        <div class="ProductHeroCard">
          <div class="ProductHeroBrandContainer">
            <img src="/assets/disneybrand.png" />
            <span>50% OFF en Combo Plus</span>
            <span>Canjeando 50.000 puntos MiEcommerce.</span>
          </div>
        </div>
        <div class="ProductHeroCard">
          <div class="ProductHeroBrandContainer">
            <img src="/assets/hbobrand.png" />
            <span>50% OFF en Combo Plus</span>
            <span>Canjeando 50.000 puntos MiEcommerce.</span>
          </div>
        </div>
      </section>
      <%- include('../partials/productCard') %>
      <section class="MostRequested">
        <h1>Los mas pedidos</h1>
        <div class="ProductContainer">
          <% for(let i = 0; i <=7; i++){%>
          <article class="ProductCard" id="<%=moreCount[i].id %>"
            onclick="redirect(<%= moreCount[i].id %>)">
            <img src="<%=moreCount[i].images[1] %>"
            onerror="this.onerror=null; this.src='/img/imgFallBack.png'" />
            <div class="ProductCardSpecification">
              <span><%=moreCount[i].title %></span>
              <div>
                <span><%=moreCount[i].price%></span>
                <span>Puntos</span>
              </div>
            </div>
          </article>
          <% }%>
        </div>
      </section>
      <%- include('../partials/navbar.ejs')%> 
    </main>
    <%-include('../partials/footer.ejs') %>
  </body>
  <script>
    function redirect(id) {
      window.location.href =`http://localhost:3000/products/${id}`;
    }
  </script>
</html>
